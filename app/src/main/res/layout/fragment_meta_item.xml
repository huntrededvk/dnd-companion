                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                
                android:text="@string/armor"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="128dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_armor_head_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:text="@string/head"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_armor_chest_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="0.30"
                        android:text="@string/chest"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_armor_legs_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:text="@string/legs"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_armor_head"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:contentDescription="@null"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_armor_chest"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:contentDescription="@null"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_armor_legs"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:contentDescription="@null"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        tools:src="@tools:sample/avatars" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_armor_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        tools:text="Sword" />

                    <TextView
                        android:id="@+id/tv_armor_chest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        tools:text="Shield" />

                    <TextView
                        android:id="@+id/tv_armor_legs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="0.30"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        tools:text="Sword" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_armor_foot_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:layout_marginEnd="2dp"
                        android:text="@string/foot"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_armor_gloves_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:text="@string/gloves"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_armor_back_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:text="@string/back"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_armor_foot"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:contentDescription="@null"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_armor_gloves"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:contentDescription="@null"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_armor_back"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:contentDescription="@null"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/avatars" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_armor_foot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.30"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        
                        app:layout_constraintStart_toStartOf="parent"
