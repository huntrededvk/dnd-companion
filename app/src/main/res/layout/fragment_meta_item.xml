                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            tools:layout_editor_absoluteX="128dp"
                            tools:text="@string/description" />

                    </LinearLayout>

                <TextView
                    android:id="@+id/tv_gear_title"
