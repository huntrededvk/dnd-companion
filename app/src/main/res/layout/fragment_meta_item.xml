                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    
                    android:text="@string/weapon"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="128dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintGuide_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_start_25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintGuide_percent="0.25"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_end_25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintGuide_percent="0.75"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_primary_weapon_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        android:text="@string/_1"
                        android:textAlignment="center"
                        android:textColor="#d0af7b"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideline_middle"/>

                    <TextView
                        android:id="@+id/tv_secondary_weapon_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        android:layout_marginStart="2dp"
                        android:text="@string/_2"
                        android:textAlignment="center"
                        android:textColor="#71634d"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_middle"/>

                    <ImageView
                        android:id="@+id/iv_left_weapon_slot_one"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:background="@drawable/dnd_item_title_bg"
                        android:contentDescription="@null"
                        android:padding="10dp"
                        tools:src="@tools:sample/avatars"
                        app:layout_constraintStart_toStartOf="@id/tv_primary_weapon_number"
                        app:layout_constraintEnd_toStartOf="@id/guideline_start_25"
                        app:layout_constraintTop_toBottomOf="@id/tv_primary_weapon_number"/>

                    <ImageView
                        android:id="@+id/iv_left_weapon_slot_two"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/dnd_item_title_bg"
                        android:contentDescription="@null"
                        android:padding="10dp"
                        tools:src="@tools:sample/avatars"
                        app:layout_constraintStart_toEndOf="@+id/iv_left_weapon_slot_one"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
                        app:layout_constraintTop_toBottomOf="@id/tv_primary_weapon_number"/>

                    <ImageView
                        android:id="@+id/iv_right_weapon_slot_one"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="2dp"
                        android:background="@drawable/dnd_item_title_bg"
                        android:contentDescription="@null"
                        android:padding="10dp"
                        tools:src="@tools:sample/avatars"
                        app:layout_constraintStart_toEndOf="@id/guideline_middle"
                        app:layout_constraintTop_toBottomOf="@id/tv_secondary_weapon_number"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end_25"/>

                    <ImageView
                        android:id="@+id/iv_right_weapon_slot_two"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:background="@drawable/dnd_item_title_bg"
                        android:contentDescription="@null"
                        android:padding="10dp"
                        tools:src="@tools:sample/avatars"
                        app:layout_constraintTop_toBottomOf="@id/tv_secondary_weapon_number"
                        app:layout_constraintEnd_toEndOf="@id/tv_secondary_weapon_number"
                        app:layout_constraintStart_toEndOf="@id/guideline_end_25"/>

                    <TextView
                        android:id="@+id/tv_left_weapon_slot_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="#d0af7b"
                        android:textSize="16sp"
                        tools:text="Sword"
                        app:layout_constraintStart_toStartOf="@id/iv_left_weapon_slot_one"
                        app:layout_constraintTop_toBottomOf="@id/iv_left_weapon_slot_one"
                        app:layout_constraintEnd_toStartOf="@id/guideline_start_25"/>

                    <TextView
                        android:id="@+id/tv_left_weapon_slot_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="#d0af7b"
                        android:textSize="16sp"
                        tools:text="Shield"
                        app:layout_constraintEnd_toStartOf="@id/guideline_middle"
                        app:layout_constraintTop_toBottomOf="@id/iv_left_weapon_slot_one"
                        app:layout_constraintStart_toEndOf="@id/guideline_start_25"/>

                    <TextView
                        android:id="@+id/tv_right_weapon_slot_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="#d0af7b"
                        android:textSize="16sp"
                        tools:text="Sword"
                        app:layout_constraintStart_toEndOf="@id/guideline_middle"
                        app:layout_constraintTop_toBottomOf="@id/iv_right_weapon_slot_one"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end_25"/>

                    <TextView
                        android:id="@+id/tv_right_weapon_slot_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dnd_item_title_bg"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="#d0af7b"
                        android:textSize="16sp"
                        tools:text="Shield"
                        app:layout_constraintEnd_toEndOf="@id/iv_right_weapon_slot_two"
                        app:layout_constraintTop_toBottomOf="@id/iv_right_weapon_slot_two"
                        app:layout_constraintStart_toEndOf="@id/guideline_end_25"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
